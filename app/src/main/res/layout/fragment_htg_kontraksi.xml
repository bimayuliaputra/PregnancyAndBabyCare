<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bima.pregnancyandbabycare.HtgKontraksiFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutAtas">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text_Waktu"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:text="00:00:00"
                    android:layout_marginBottom="10dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutButton"
                    android:layout_below="@+id/text_Waktu"
                    android:layout_centerHorizontal="true">
                    <Button
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:id="@+id/button_start"
                        android:onClick="btnOnklik"
                        android:text="Start"/>
                    <Button
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:id="@+id/button_reset"
                        android:lay="@+id/button_start"
                        android:text="Reset"
                        android:onClick="btnOnklik"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/button_start"
                        android:layout_toEndOf="@+id/button_start"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"/>
                </RelativeLayout>
            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listWaktu"
                android:layout_below="@id/layoutAtas"></ListView>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
